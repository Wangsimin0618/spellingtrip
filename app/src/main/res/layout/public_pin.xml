<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="52dp"
    android:paddingTop="92dp"
    android:background="@drawable/publicpindialogbg"
    android:paddingBottom="20dp"
    android:paddingRight="52dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拼旅行"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#ff333333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结伴旅行-"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="#4d00cfde"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一起吃喝玩乐，让你的旅途不再乏味"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ff333333"/>
    </LinearLayout>
       <ImageView
           android:id="@+id/img_grfb"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:src="@drawable/publicpingrfb"
           android:layout_above="@id/txt_grfb"/>
    <TextView
        android:id="@+id/txt_grfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/public_gb"
        android:layout_marginBottom="89dp"
        android:text="个人发布"/>
    <ImageView
        android:id="@+id/img_sjfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_sjfb"
        android:layout_alignParentRight="true"
        android:src="@drawable/publicpinsjfb"/>
    <TextView
        android:id="@+id/txt_sjfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_above="@id/public_gb"
        android:layout_marginBottom="89dp"
        android:textSize="14sp"
        android:text="商家发布"/>
        <ImageView
            android:id="@+id/public_gb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:src="@drawable/publicpingb"/>
</RelativeLayout>