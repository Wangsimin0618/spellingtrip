<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/ivPublishBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51px"
        android:layout_marginLeft="20px"
        android:src="@drawable/ic_back"/>
    <ImageView
        android:id="@+id/ivPublishPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="51px"
        android:layout_marginRight="20px"
        android:src="@mipmap/publish_photo"/>
    <TextView
        android:id="@+id/publish_paishe"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/paishe_shape"
        android:layout_marginBottom="40px"/>
    <ImageView
        android:id="@+id/ivCarmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/publish_xiangji"
        android:layout_alignParentRight="true"
        android:layout_marginRight="77px"
        android:layout_marginBottom="85px"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:id="@+id/llPandenPai"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40px"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPandenPai"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/paishestart_shape"
            android:layout_marginRight="100px"
            android:text="重拍"/>
        <TextView
            android:id="@+id/tvPhotoOk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/main_bg"
            android:background="@drawable/paishe_shape"
            android:text="确定"/>
    </LinearLayout>
</RelativeLayout>