<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llmineTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-5dp"
    android:layout_marginTop="-5dp"
    android:layout_marginRight="-5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:bottomShadowHeight="15dp"
    app:shadowStartAlpha="15"
    app:cornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/tvTitleMineFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/articleTitle"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tvUserId"
            android:layout_below="@+id/tvTitleMineFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/text79"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/ivSetFragmentRight"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33px"
            android:padding="1dp"
            android:src="@mipmap/tab_shezhi"
            android:visibility="visible" />
        <ImageView
        android:id="@+id/ivZuDuiRight"
        android:layout_width="25dp"
        android:layout_height="25dp"
            android:layout_centerVertical="true"
       android:layout_toLeftOf="@+id/ivSetFragmentRight"
        android:layout_marginRight="40px"
        android:src="@mipmap/tab_zudui"
        android:visibility="gone" />

    </RelativeLayout>

</www.linwg.org.lib.LCardView>