<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MerchantSHFragment"
    android:background="@color/main_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/shunselect"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交成功，请等待管理员审核！"
        android:textStyle="bold"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="75dp"
        android:textColor="#ff666666"
        android:textSize="16sp"
        />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预计24小时内审核完毕，审核结果会短信通知到 您的注册手机上，请注意查收。"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="#999999"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textSize="16sp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/shselect"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证成功，去发布你的第一条活动吧！"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:textColor="#666666"
        android:textSize="16sp"
        />
    </LinearLayout>
    <Button
        android:id="@+id/btn_fh"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/pay_button"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:text="返回首页"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:textStyle="bold"/>

</RelativeLayout>