<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="17dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="43dp">

        <ImageView
            android:id="@+id/ivComiEditUserPassBack"
            android:layout_width="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_height="18dp"
            android:src="@mipmap/nav_fanhui" />

        <TextView
            android:id="@+id/tvComiEditPsssPass"
            android:layout_toRightOf="@+id/ivComiEditUserPassBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="@color/history_text"
            android:textSize="29sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvComiEditPsssPass"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="拼旅行，给你不一样的旅行体验"
            android:textColor="@color/history_text"
            android:textSize="12sp" />

            <EditText
                android:id="@+id/etComiOneEditUserPassPhone"
                android:layout_width="match_parent"
                android:layout_above="@+id/etComiTwoEditUserPassPhone"
                android:layout_height="58dp"
                android:paddingLeft="17dp"
                android:background="@drawable/loginnor_shape"
                android:hint="输入密码"
                android:inputType="numberPassword"
                android:textColor="@color/history_text"
                android:textColorHint="@color/textabc0c"
                android:textSize="15sp" />
        <EditText
            android:id="@+id/etComiTwoEditUserPassPhone"
            android:layout_width="match_parent"
            android:layout_above="@+id/tvComiEditUserPassLink"
            android:layout_height="58dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="17dp"
            android:background="@drawable/loginnor_shape"
            android:hint="确认密码"
            android:inputType="numberPassword"
            android:textColor="@color/history_text"
            android:textColorHint="@color/textabc0c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvComiEditUserPassLink"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:background="@color/textDC"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvComiEditUserPassLogineSel"
            style="@style/LogineShapeStyle"
            android:layout_below="@+id/tvComiEditUserPassLink"
            android:background="@drawable/loginnor_shape"
            android:text="修改密码"
            android:textColor="@color/textabc0c"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvComiEditUserPassLogineSel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="“人生若只如初见、我还在这里等你;”"
                android:textColor="@color/textabc0c"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意"
                    android:textColor="@color/text40"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvComiEditUserPassLogineYinSi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拼旅行用户协议和隐私政策"
                    android:textColor="@color/text68"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>