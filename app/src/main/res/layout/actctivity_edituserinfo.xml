<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="21dp"
    android:background="@color/main_bg">
    <TextView
        android:id="@+id/tvEditUserInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写个人资料"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/history_text"
        android:textSize="25sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/llEditUserInfoCenter"
        android:layout_below="@+id/tvEditUserInfoTitle"
        android:layout_height="match_parent">
        <com.spellingtrip.example.view.ShapedImageView
            app:shape_mode="circle"
            android:src="@mipmap/choose_header"
            android:id="@+id/ivEditUserInfoChooseHeader"
          android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llEditUserInfoCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/etEditUserInfoNick"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@color/main_bg"
            android:textColor="@color/history_text"
            android:textColorHint="@color/history_text"
            android:textSize="14sp"
            android:hint="请输入昵称~"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="@color/textf1"/>
        <TextView
            android:id="@+id/tvEditUserInfoSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择性别"
            android:layout_marginTop="28dp"
            android:textColor="@color/text68"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:drawableRight="@mipmap/blue_down"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="28dp"
            android:background="@color/textf1"/>
        <TextView
            android:id="@+id/tvEditUserInfoBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择生日"
            android:textColor="@color/text68"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:drawableRight="@mipmap/blue_down"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="@color/textf1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvEditUserInfoNext"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="下一步"
        android:textColor="@color/main_bg"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="65dp"
        android:background="@mipmap/loginsel_bg"
        android:layout_below="@+id/llEditUserInfoCenter"/>
</RelativeLayout>