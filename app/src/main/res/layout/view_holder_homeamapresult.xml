<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_affirm_selected" />

    <ImageView
        android:id="@+id/image_checknor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:padding="3dp"
        android:src="@drawable/icon_affirm_selected_nor"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="title"
            android:textColor="@color/articleTitle"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_title_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_marginTop="6dp"
            android:text="sub_title"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text40"
            android:textSize="13sp" />

    </RelativeLayout>


</LinearLayout>