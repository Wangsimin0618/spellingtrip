<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llFragmentTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:bottomShadowHeight="15dp"
    app:shadowStartAlpha="15"
    android:layout_marginLeft="-5dp"
    android:layout_marginTop="-5dp"
    android:layout_marginRight="-5dp"
    app:cornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tvTitleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="游圈"
            android:textColor="@color/articleTitle"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/ivFragmentRight"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/camre"
            android:visibility="gone" />

    </RelativeLayout>


</www.linwg.org.lib.LCardView>