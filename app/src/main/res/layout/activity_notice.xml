<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TabLayout
        android:id="@+id/notice_tab"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_toplan"
        android:layout_height="45dp"
        android:background="@color/main_bg"
        android:textSize="17sp"
        app:tabIndicatorColor="@color/textSelColor"
        app:tabSelectedTextColor="@color/history_text"
        app:tabTextColor="@color/articleTitle"
        app:tabIndicatorFullWidth="false"
        android:fillViewport="false"
        app:layout_scrollFlags="scroll"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/notice_viewPager"
        android:layout_below="@+id/notice_tab"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include layout="@layout/comment_title"/>
</RelativeLayout>