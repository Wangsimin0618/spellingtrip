<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tv_toplan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-5dp"
    android:layout_marginTop="-5dp"
    android:layout_marginRight="-5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:bottomShadowHeight="1dp"
    app:shadowStartAlpha="15"
    app:cornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/fhblack" />

        <TextView
            android:id="@+id/tv_lantitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RelativeLayout>


</www.linwg.org.lib.LCardView>