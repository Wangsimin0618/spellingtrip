<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="53dp"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".activity.MerchantRZActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:id="@+id/rz_fh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fhblack"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="商家认证"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/lc_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/lcstart"
            android:text="填写资料"
            android:textColor="#333333"
            android:drawablePadding="8dp"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/edit_view"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/lc_edit"/>
        <TextView
            android:id="@+id/lc_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/lcunstart"
            android:text="支付费用"
            android:textColor="#333333"
            android:drawablePadding="8dp"
            android:textSize="12sp"
            android:layout_toRightOf="@id/edit_view"/>
        <ImageView
            android:id="@+id/pay_view"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/lc_pay"/>
        <TextView
            android:id="@+id/lc_sh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/lcunstart"
            android:text="审核"
            android:textColor="#333333"
            android:drawablePadding="8dp"
            android:textSize="12sp"
            android:layout_toRightOf="@id/pay_view"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#f8f8f8"
        android:layout_marginTop="24dp"/>
    <FrameLayout
        android:id="@+id/frame_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:background="@color/main_bg"/>

</LinearLayout>